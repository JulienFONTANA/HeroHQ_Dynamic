@model HeroHQ_Dynamic.ViewModels.HeroDetailsViewModel

<!-- Hero Details -->
<div class="col-xs-12 col-sm-9">
    <div class="content" id="hero_details">
        <h1 class="page-title">Un héro en détail</h1>

        <section class="section details">
            <div class="row">
                <div class="col-vxs-12 col-xs-6 col-sm-5">
                    <div class="avatar-wrap">
                        <img class="avatar" src="/images/@Model.detail.Photo" alt="@Model.detail.Nom">
                    </div>
                </div>
                <div class="col-vxs-12 col-xs-6 col-sm-7">
                    <div class="infos">
                        <h1 class="name">@Model.detail.Nom</h1>
                        <p><span><span class="fwb">Citation :</span> @Model.detail.Citation</span></p>
                        <p><span><span class="fwb">Âge :</span> @Model.detail.Age ans</span></p>
                        <p><span><span class="fwb">Pouvoir :</span> @Model.detail.Pouvoir</span></p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>