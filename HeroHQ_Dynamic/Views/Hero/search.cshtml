<!-- Ici le model utilisé par la vue Razor ne sert pas directement à afficher
     des informations, mais est utilisée dans la vue partielle -->
@model HeroHQ_Dynamic.ViewModels.HeroSearchViewModel

<!-- Search -->
<div class="col-xs-12 col-sm-9">
    <div class="content" id="content_search">
        <h1 class="page-title">Tout les héros</h1>
        <div class="row">
            <div class="col-xs-12">
                <div class="panel">
                    <div class="row imgback">
                        <div class="hidden-xs col-sm-3"></div>
                        <div class="col-xs-12 col-sm-9 fp">
                            <div class="filters">

                                <div class="filters" id="filters">
                                    <!-- Formulaire de recherche -->
                                    @using (Ajax.BeginForm("Search", "Hero", new AjaxOptions
                                    {
                                        HttpMethod = "POST",
                                        UpdateTargetId = "HeroResult",
                                        InsertionMode = InsertionMode.Replace
                                    }))
                                    {
                                        <div class="filter">
                                            <p><label for="">Nom du héro</label></p>
                                            <p><input type="text" name="heroName" id="heroName" placeholder="ex: Reaper"></p>
                                        </div>
                                        <button type="submit" class="btn btn_big btn_color1" value="Submit" id="SubmitBtn">
                                            Trouver un héro
                                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                        </button>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Affichage du résultat de la recherche -->
                <div class="result">
                    <div class="heroes row" id="HeroResult">
                        <!-- Ici les résultats sont affiché dans une vue partielle! -->
                        @Html.Partial("_searchResult", Model)
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
