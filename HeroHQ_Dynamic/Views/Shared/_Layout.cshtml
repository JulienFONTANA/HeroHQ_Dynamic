<!-- Le layout est le nom de la vue qui englobe toutes les autres -->
<!-- On présise aux navigateur le languague utilisé, ici HTML -->
<!DOCTYPE html>
<html>

<!-- La section "head" contient les informations utilisés par votre navigateur -->
<head>
    <meta charset="utf-8" />
    <title>Heroes H.Q. Néo</title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="c17 engineering" />
    <meta name="copyright" content="c17 engineering" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="HandheldFriendly" content="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, minimal-ui" />
    <meta name="apple-mobile-web-app-title" content="Hero H.Q. Néo">
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <link rel="shortcut icon" href="~/images/favicon.png" />
    <link rel="image_src" href="~/images/favicon.png" />
    <link rel="icon" type="image/png" href="~/images/favicon.png" />
    <!-- Ici on dit quel scripts utiliser -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>

<!-- La section "body" contient les informations que l'on doit afficher -->
<body>
    <div id="wrapper">
        <!-- Header -->
        <header id="header">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <a href="@Url.Action("Index", "Home")" class="logo">
                            <img src="/images/herohqbanner.png" alt="" width="350" height="130">
                        </a>
                        <div class="desc">
                            <p>Besoin d'un héros ?<br />Trouvez celui qu'il vous faut!</p>
                            <p><a class="link" href="@Url.Action("Search", "Hero")"><strong>De nombreux héros</strong> à votre service !</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" id="mobile-menu-btn">
                <i class="glyphicon glyphicon-menu-hamburger"></i>
            </button>
        </header>

        <main id="main">
            <div class="container">
                <div class="row">
                    <!-- Barre de navigation -->
                    <div class="col-sm-3" id="col-nav">
                        <button type="button" id="mobile-close-btn">
                            <i class="glyphicon glyphicon-remove"></i>
                        </button>
                        <nav id="nav">
                            <ul class="menu">
                                <li class="page_hom">
                                    <a href="@Url.Action("Index", "Home")">
                                        <span>Accueil</span>
                                    </a>
                                </li>
                                <li class="page_rec">
                                    <a href="@Url.Action("Search", "Hero")">
                                        <span>Recherche</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>

                    <!-- Rendu des vues partielles ici -->
                    @RenderBody()

                </div>
            </div>
        </main>

        <!-- Footer -->
        <footer id="footer">
            <div class="container">
                <div class="row footer-hero-wrap">
                    <div class="hidden-xs col-sm-3">
                        <div class="footer-hero"></div>
                    </div>
                    <div class="col-xs-12 col-sm-9">

                        <p>Le QG des héros est situé 8 avenue de la Justice. Tél: 06.65.59.66.30.30 Mail: ausecours@hero.com</p>

                        <a href="@Url.Action("Index", "Home")" class="btn btn_color1">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                            Revenir à l'acceuil
                        </a>

                        <div class="hr"></div>
                        <p class="copyright">Crée pour la Formation Néo. Images tirés d'Overwatch™, un jeu Blizzard Entertainment™.</p>
                        <p class="copyright">Ne pas publiez sans l'accord de l'éditeur.</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
